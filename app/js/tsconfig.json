{
    "compilerOptions": {
        "baseUrl": ".",
        "incremental": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "jsx": "react",
        "lib": [
            "es2019",
            "dom"
        ],
        "module": "CommonJS",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "../__build/js",
        "paths": {
            "@build/*": [ "../__build/*"],
            "*": [
                "./src/*",
                "./node_modules/*"
            ]
        },
        "preserveWatchOutput": true,
        "rootDir": "/",
        "target": "es2019"
    }
}

uid "edit_auto"

title "PostgreSQL mit automatischem Formular editieren"

metadata.keywords [ "Editieren" "PostgreSQL" ]

metadata.abstract """
Minimale Konfiguration zum Editieren von Objekten aus einer PostgreSQL Tabelle.
"""

actions+ { type "edit" }
client.addElements+ { tag "Sidebar.Edit" }
client.addElements+ { tag "Toolbar.Edit" }
client.options.sidebarActiveTab "Sidebar.Edit"

map {
    center {demo_point_duesseldorf_3857}
    zoom.initScale 150000
    zoom.maxScale  1000000
}

map.layers+ {
    title "Interessante Orte"
    type "postgres"
    tableName "edit.poi"
    models+ {
        type "postgres"
        isEditable true
        permissions.edit 'allow all'
    }
}

